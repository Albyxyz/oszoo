extends layout

block content
  .main-container(ng-app='OSZoo' ng-controller='AdminController' layout="column")
      md-toolbar(layout="row").md-whiteframe-z2
        div(class="md-toolbar-tools" layout="row")
          md-button(ng-click="toggleSidenav('left')" hide-gt-sm class="md-icon-button menuBtn")
            md-icon(aria-label="Menu" md-svg-icon="https://s3-us-west-2.amazonaws.com/s.cdpn.io/68133/menu.svg")
          h1
            a(href="/") Control Panel
      .content(layout="column")
        div.md-whiteframe-z1.tile(flex)
          md-toolbar(layout="row")
            div(class="md-toolbar-tools" layout="row")
              h1 Operating Systems
              div(flex)
              md-button.md-icon-button(ng-click="showNewOsDialog($event)" aria-label="Plus")
                md-icon(md-svg-icon="images/icons/ic_add_white_24px.svg")
          md-content
            .tile-row(ng-repeat="os in osList" layout="row")
              md-button.md-primary(layout="row" flex ng-click="showModifyOsDialog($event, os)")
                span(flex="20") {{os.title}}
                span(flex="80").button-description {{os.description}}
        div.md-whiteframe-z1.tile(flex)
          md-toolbar(layout="row")
            div(class="md-toolbar-tools" layout="row")
              h1 Sessions
              span(flex)
              h1(ng-show="sessions") {{sessions}}/20
          md-content
            .tile-row(ng-if="noSessionsRunning()")
              div.tile-row-text(flex)
                div No active sessions!
            .tile-row(ng-if="!noSessionsRunning()")
              div.tile-row-text.header(flex)
                div(flex) IP Address
                div(flex) Operating System
                div(flex) Memory(MB)
                div(flex) Timer
                div(flex) RFB Port
            .tile-row(ng-repeat="client in clients" layout="row")
              div.tile-row-text(flex)
                div(flex) {{client.ip}}
                div(flex) {{client.title}}
                div(flex) {{client.memory}}
                div(flex) {{client.timer}}
                div(flex) {{client.screenPort}}
